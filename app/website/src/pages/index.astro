---
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import BlogCard from '@/components/react/blog-card'
import Skills from '@/components/react/skills'
import { buttonVariants } from '@/components/ui/button'
import Logo from '@/components/ui/logo'
import Layout from '@/layouts/Layout.astro'
import { getRecentPosts } from '@/lib/data-utils'
import { SITE, technologies, SOCIAL_LINKS, ICON_MAP } from '@/consts'
import configData from '../website.yaml'

const blog = await getRecentPosts(3)
const currentUrl = Astro.url;
const resume = configData.resume;
const experiences = resume.experiences || [];
const certifications = resume.certifications || [];
const educations = resume.education || [];
---

<Layout canonicalUrl={currentUrl}>
  <PageHead slot="head" title="Cloud/DevOps Engineer" />
  <section class="container mx-auto flex flex-col gap-y-12 px-4 py-8 sm:px-8 lg:px-16 xl:px-0">
    <div
      class="flex flex-col items-center text-center sm:flex-row sm:items-start sm:gap-8 sm:text-left"
    >
      <div class="relative overflow-hidden rounded-lg sm:shrink-0 sm:overflow-hidden sm:rounded-lg">
        <Logo
          className="h-auto w-40 object-cover sm:w-48 md:w-56 lg:w-64 "
        />
      </div>
      <div class="mt-8 sm:mt-0 sm:max-w-xl">
        <h1
          class="font-custom text-foreground text-start text-4xl font-extrabold sm:text-5xl"
        >
          {SITE.title}
        </h1>
        <div class="mt-4 flex items-center gap-2" aria-label="location">
          <span
            class="bg-primary text-primary-foreground ring-primary/30 rounded-full px-3 py-1 text-sm font-medium ring-1"
          >
            I'm from {SITE.location}.
          </span>
        </div>
        <p class="text-md text-foreground mt-4 text-start font-sans" title="description" aria-label="description">
          {SITE.description}
        </p>
        
        <div class="mt-6 flex flex-wrap gap-3">
          {SOCIAL_LINKS.map((link) => (
            <a 
              href={link.href} 
              class="inline-flex items-center gap-1.5 rounded-lg bg-muted px-3 py-1.5 text-sm font-medium text-muted-foreground hover:bg-muted/80"
              target={link.href.startsWith('http') ? '_blank' : undefined}
              rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
            >
              <span>{link.label}</span>
            </a>
          ))}
        </div>
      </div>
    </div>

    <section class="relative" aria-labelledby="experience-title">
      <h2
        id="experience-title"
        class="font-custom text-foreground text-2xl font-bold"
        title="professional experience"
        aria-label="professional experience"
        role="heading"
      >
        {resume.title}
      </h2>
      <p class="text-muted-foreground text-sm mb-6" aria-label="experience description">
        {resume.description}
      </p>
      
      {experiences.map((exp, index) => (
        <div class={`border-l-2 border-muted pl-4 ${index !== experiences.length - 1 ? 'mb-8' : ''}`}>
          <h3 class="font-bold text-lg">{exp.position} @ {exp.company}</h3>
          <p class="text-sm text-muted-foreground">{exp.period}</p>
          <p class="my-2">{exp.description}</p>
          
          {exp.achievements && exp.achievements.length > 0 && (
            <div class="mt-3">
              <h4 class="text-sm font-semibold mb-1">Key Achievements:</h4>
              <ul class="list-disc list-inside text-sm space-y-1 text-muted-foreground">
                {exp.achievements.map(achievement => (
                  <li>{achievement}</li>
                ))}
              </ul>
            </div>
          )}
          
          {exp.projects && exp.projects.length > 0 && (
            <div class="mt-4">
              <h4 class="text-sm font-semibold mb-2">Notable Projects:</h4>
              {exp.projects.map(project => (
                <div class="mb-3 bg-muted/40 p-3 rounded-md">
                  <h5 class="font-medium">{project.name}</h5>
                  <p class="text-sm mb-2">{project.description}</p>
                  <div class="flex flex-wrap gap-1.5 mb-2">
                    {project.technologies.map(tech => (
                      <span class="inline-block text-xs bg-primary/10 text-primary py-0.5 px-2 rounded-full">
                        {tech}
                      </span>
                    ))}
                  </div>
                  <p class="text-xs text-muted-foreground">
                    <span class="font-medium">Outcome:</span> {project.outcomes}
                  </p>
                </div>
              ))}
            </div>
          )}
        </div>
      ))}
      
    </section>

{/* Certifications Section */}
{certifications && certifications.length > 0 && (
  <section class="relative" aria-labelledby="certifications-title">
    <h2
      id="certifications-title"
      class="font-custom text-foreground text-2xl font-bold"
      title="certifications"
      aria-label="certifications"
      role="heading"
    >
      Certifications
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6 -mx-4 px-4 overflow-x-auto">
      {certifications.map(cert => {
        // Use the badge property from YAML if it exists
        const badgePath = cert.badge ? `/static/images/badges/${cert.badge}` : '';
        
        return (
          <div class="border rounded-lg p-5 hover:border-primary/50 transition-colors min-w-[300px] w-full">
            <div class="flex flex-col items-center gap-4">
              {badgePath && (
                <div class="w-36 h-36 flex items-center justify-center">
                  <img 
                    src={badgePath}
                    alt="" 
                    width="144" 
                    height="144" 
                    class="rounded-md max-w-full max-h-full object-contain"
                    onError={(e) => {
                      // Remove the img element if it fails to load
                      e.target.style.display = 'none';
                    }}
                  />
                </div>
              )}
              <div class="w-full text-center">
                <h3 class="font-bold text-lg">{cert.name}</h3>
                <p class="text-sm text-muted-foreground">{cert.issuer} â€¢ {cert.date}</p>
                <p class="mt-3 text-sm">{cert.description}</p>
                {cert.link && (
                  <a 
                    href={cert.link} 
                    class="text-primary text-sm mt-3 inline-block hover:underline"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    View credential
                  </a>
                )}
              </div>
            </div>
          </div>
        );
      })}
    </div>
  </section>
)}
 
     {/* Education Section */}
    {educations && educations.length > 0 && (
      <section class="relative" aria-labelledby="education-title">
        <h2
          id="education-title"
          class="font-custom text-foreground text-2xl font-bold"
          title="education"
          aria-label="education" 
          role="heading"
        >
          Education
        </h2>
        <div class="mt-4 space-y-4">
          {educations.map(edu => (
            <div class="border-l-2 border-muted pl-4">
              <h3 class="font-bold">{edu.degree}</h3>
              <p class="text-sm font-medium">{edu.institution}</p>
              <p class="text-sm text-muted-foreground">{edu.period}</p>
              {edu.description && (
                <p class="mt-2 text-sm">{edu.description}</p>
              )}
            </div>
          ))}
        </div>
      </section>
    )}

      <div class="mt-6">
        <Link
          href={resume.pdfLink}
          class={buttonVariants({ variant: 'outline' })}
          target="_blank"
        >
          View Full Resume PDF
        </Link>
      </div>



    <section class="relative" aria-labelledby="skills-title">
      <h2
        id="skills-title"
        class="font-custom text-foreground text-2xl font-bold"
        title="skills"
        aria-label="skills"
        role="heading"
      >
        Skills & Technologies
      </h2>
      <p class="text-muted-foreground text-sm" aria-label="skills description">
        Here are some of the technologies I've been working with:
      </p>
      <div>
        <Skills client:load />
      </div>
    </section>

    <section class="flex flex-col gap-y-4" aria-labelledby="latest-posts-title" role="region">
      <div class="relative" aria-labelledby="latest-posts-title">
        <h2
          id="latest-posts-title"
          class="font-custom text-foreground text-2xl font-bold"
          title="latest blog posts"
          aria-label="latest blog posts"
        >
          Latest Blog Posts
        </h2>
        <p class="text-muted-foreground text-sm" aria-label="blog description">
          Here are some of my latest blog posts. You can find more on my blog
          page.
        </p>
      </div>
      <ul class="flex flex-col gap-y-4">
        {
          blog.map((post) => (
            <li>
              <BlogCard entry={post} />
            </li>
          ))
        }
      </ul>
      <div class="flex justify-center" aria-label="see all posts">
        <Link
          href="/blog"
          class={buttonVariants({ variant: 'ghost' }) + ' group'}
        >
          See all posts <span
            class="ml-1.5 transition-transform group-hover:translate-x-1"
            >&rarr;</span
          >
        </Link>
      </div>
    </section>


    <section class="relative" aria-labelledby="projects-title">
      <h2
        id="projects-title"
        class="font-custom text-foreground text-2xl font-bold"
        title="projects"
        aria-label="projects"
        role="heading"
      >
        Featured Projects
      </h2>
      <p class="text-muted-foreground text-sm" aria-label="projects description">
        Check out some of my recent work:
      </p>
      <div class="mt-6">
        <Link
          href="/projects"
          class={buttonVariants({ variant: 'ghost' }) + ' group'}
        >
          View all projects <span
            class="ml-1.5 transition-transform group-hover:translate-x-1"
            >&rarr;</span
          >
        </Link>
      </div>
    </section>


  </section>
</Layout>
